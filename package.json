{
  "name": "trevordmiller-website",
  "scripts": {
    "dev": "next",
    "precommit": "lint-staged",
    "verify": "npm run lint && npm run test",
    "lint": "eslint .",
    "format": "prettier --write",
    "test": "jest",
    "build": "next build",
    "start": "next start",
    "deploy": "now",
    "alias": "now alias"
  },
  "lint-staged": {
    "*.{json,md}": ["prettier --write", "git add"],
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "browser": true,
      "jest": true
    },
    "plugins": ["import", "react", "jsx-a11y", "jest"],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:jest/recommended"
    ],
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": ["next/babel"],
    "plugins": [
      [
        "module-resolver",
        {
          "root": ["./"],
          "alias": {
            "utils": "./utils",
            "components": "./components"
          }
        }
      ]
    ]
  },
  "browser": {
    "rss": false
  },
  "now": {
    "alias": "trevordmiller.com",
    "env": {
      "NODE_ENV": "production"
    },
    "scale": {
      "sfo1": {
        "min": 1,
        "max": "auto"
      }
    }
  },
  "devDependencies": {
    "@mdx-js/loader": "^0.8.1",
    "@mdx-js/mdx": "^0.8.1",
    "babel-eslint": "^8.2.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "eslint": "^4.19.1",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "now": "^11.1.7",
    "prettier": "^1.12.1"
  },
  "dependencies": {
    "next": "^6.0.0",
    "nova-colors": "^2.1.5",
    "prop-types": "^15.6.1",
    "raven-js": "^3.24.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "rss": "^1.2.2"
  }
}
