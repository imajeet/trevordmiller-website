{
  "name": "trevordmiller-website",
  "scripts": {
    "dev": "next",
    "precommit": "lint-staged",
    "verify": "npm run lint && npm run test",
    "deploy": "now",
    "alias": "now alias",
    "lint": "eslint .",
    "format": "prettier --write",
    "test": "jest",
    "build": "next build",
    "start": "next start"
  },
  "lint-staged": {
    "*.{json,md}": ["prettier --write", "git add"],
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "eslintConfig": {
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react"],
    "env": {
      "node": true,
      "browser": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "rules": {
      "react/display-name": "off",
      "react/prop-types": "off",
      "react/no-unescaped-entities": "off",
      "react/jsx-key": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "now": {
    "alias": "trevordmiller.com",
    "env": {
      "NODE_ENV": "production"
    },
    "scale": {
      "sfo1": {
        "min": 1,
        "max": "auto"
      }
    }
  },
  "browser": {
    "rss": false
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "now": "^11.1.4",
    "prettier": "^1.12.0"
  },
  "dependencies": {
    "next": "^5.1.0",
    "nova-colors": "^2.1.5",
    "prop-types": "^15.6.1",
    "raven-js": "^3.24.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-syntax-highlighter": "^7.0.2",
    "react-tabs": "^2.2.1",
    "rss": "^1.2.2"
  }
}
